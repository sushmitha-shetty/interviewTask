{{cart-header cartLength=cartLength}}
<div id="wrapper" class="container">
  {{logo-section}}
  <br>
  <div id="flashIn">Item added to your cart.</div>
  <div id="flashOut">Item already added to your cart.</div>
  <section class="main-content">  
    <ul class="thumbnails listing-products">
      {{#each model as |item|}}
        <li class="span4">
          <div class="product-box">                                 
            <img alt="" src={{item.image}}><br/>
            <div class="title">{{item.description}}</div><br/>
            <div class="category">{{item.category}}</div>
            <p class="price">â‚¹{{item.price}}</p>
            <div class="acart" {{action "addToCart" item}}>Add to Cart</div>
          </div>
        </li>
      {{/each}}       
    </ul>               
    <hr>
  </section>
  {{cart-footer}}
</div>